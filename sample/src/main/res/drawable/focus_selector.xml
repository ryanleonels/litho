<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_focused="true">
    <shape>
      <solid
          android:color="#3498DB"
          />
      <stroke
          android:width="1dp"
          android:color="#2980B9"
          />
      <corners
          android:radius="5dp"
          />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp"
          />
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:color="#BBBBBB"
          />
      <stroke
          android:width="1dp"
          android:color="#999999"
          />
      <corners
          android:radius="5dp"
          />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp"
          />
    </shape>
  </item>
</selector>
