    name = "logging",
    language = "JAVA",
    visibility = [
        "PUBLIC",
    ],
    deps = [
        LITHO_ANDROIDSUPPORT_TARGET,
        LITHO_JAVA_TARGET,
        LITHO_TESTING_CORE_TARGET,
        LITHO_PERF_LOGGER,
    ],
    exported_deps = [
        LITHO_PERF_LOGGER,
    ],
)
